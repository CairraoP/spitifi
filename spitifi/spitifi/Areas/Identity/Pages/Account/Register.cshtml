@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<div class="container text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="row justify-content-center w-100">
        <div class="col-md-4">
            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                    <h2 class="text-center">Criar uma nova conta</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <h6>Nome de Utilizador</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.Username" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Utilizador.Username">Nome de Utilizador</label>
                        <span asp-validation-for="Input.Utilizador.Username" class="text-danger"></span>
                    </div>

                    <h6>Email</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <h6>Palavra-Passe</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Palavra-Passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <h6>Confirmar Palavra-Passe</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirme a Palavra-Passe</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <h6>Foto de Perfil</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Logo" type="file" class="form-control" />
                        <label asp-for="Input.Logo" class="form-label"></label>
                        <span asp-validation-for="Input.Logo" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Input.Utilizador.IsArtista" type="checkbox" class="form-check-input" />
                        <label class="form-check-label" asp-for="Input.Utilizador.IsArtista">É um artista?</label>
                        <span asp-validation-for="Input.Utilizador.IsArtista" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>

                    <div style="margin-top: 30px">
                        <p>
                            <a asp-page="./Login" class="btn btn-primary">Já tem uma conta? Faça login</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
