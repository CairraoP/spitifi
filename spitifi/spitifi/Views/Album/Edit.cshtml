@model spitifi.Models.DbModels.Album

@{
    ViewData["Title"] = "Edit";
}
<body style="background: linear-gradient(135deg, #333333, #555555); color: #ddd; font-family: Arial, sans-serif;">

<!-- Main Container with Padding and Centering -->
<div class="container mt-5">
<!-- Center the form horizontally and vertically -->
<div class="row justify-content-center">
<div class="col-md-6">
<!-- Card for the Form -->
<div class="card shadow-lg border-0 rounded-3" style="color: #2c3034">
    <div class="card-body">
        <!-- Title Section -->
        <h1 class="text-center mb-4">Editar o Albúm</h1>
        
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DonoFK" />
            <div class="form-group mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" placeholder="Nome do Albúm" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Foto" class="form-label"></label>
                <input type ="file" name="fotoAlbum" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Musicas" class="form-label">Adicionar músicas ao Albúm</label>
                <input type="file" name="musicasNovas" class="form-control" multiple />
                <span asp-validation-for="Musicas" class="text-danger"></span>
            </div>
            <div class="form-group text-center mb-3">
                <input type="submit" value="Editar" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<!-- Back Link -->
<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
</div>
</div>
</div>

</body>
