@using Microsoft.AspNetCore.Identity
@model spitifi.Models.DbModels.Utilizadores
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Detalhes</h1>

<div>
    <h4>Utilizadores</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            Quantidade de Albúms
        </dt>
        <dd class = "col-sm-10">
           @Model.Albums.Count.ToString()
        </dd>
        <dt class = "col-sm-2">
            Quantidade de Músicas
        </dt>
        <dd class = "col-sm-10">
            @Model.Albums.Sum(a => a.Musicas.Count)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar à lista</a>
</div>
