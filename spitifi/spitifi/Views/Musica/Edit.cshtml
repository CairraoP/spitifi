@model spitifi.Models.DbModels.Musica
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    
}

<h1>Editar</h1>

<h4>Musica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DonoFK" />
            <input type="hidden" asp-for="AlbumFK" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AlbumFK" class="form-label">Albúm</label>
                <input class="form-control" value="@ViewData["AlbumNome"]" readonly />
                <span asp-validation-for="AlbumFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilePath" class="control-label"></label>
                <input type="file" name="musicaNova" class="form-control" />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>                            
            <div class="form-group mb-3">
                <label asp-for="DonoFK" class="form-label">Artista</label>
                <input class="form-control" value="@ViewData["DonoNome"]" readonly />
                <span asp-validation-for="DonoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

