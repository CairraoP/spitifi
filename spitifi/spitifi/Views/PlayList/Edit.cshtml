@using spitifi.Data.DbModels
@model spitifi.Data.DbModels.PlayList

@{
    ViewData["Title"] = "Edit";

    var selecionado = "";
}

<h1>Editar</h1>

<h4>PlayList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Músicas</label>
                @foreach (Musica musica in ViewBag.ListaMusicas) {
                    if (Model.Musicas.Contains(musica)) { selecionado = "checked"; }

                    <br /> <input type="checkbox" value="@musica.Id" name="musicasSelecionadas" @selecionado /> @musica.Nome
                    selecionado = "";

                }
            </div>
            <div class="form-group">
                    <input type="submit" value="Guardar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

