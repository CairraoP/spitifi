@using spitifi.Models.DbModels
@model spitifi.Models.DbModels.PlayList

@{
    ViewData["Title"] = "Edit";

    var selecionado = "";
    var icon = "bi bi-check-circle";
}

<h1>Editar</h1>

<h4>PlayList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <table class="table">
                    <thead>
                    <tr class="control-label">Músicas</tr>
                    </thead>
                    <tbody>
                    @foreach (Musica musica in ViewBag.ListaMusicas)
                    {
                        selecionado = Model.Musicas.Contains(musica) ? "checked" : "";
                        icon = Model.Musicas.Contains(musica) ? "bi bi-check-circle-fill" : "bi bi-check-circle";
                        
                        <tr>
                            <td>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input visually-hidden" id="checkbox-@musica.Id" value="@musica.Id" name="musicasSelecionadas" @selecionado/>
                                <label for="checkbox-@musica.Id" style="color: white">
                                    <i id="icon-@musica.Id" class="@icon" style=" margin-right: 5px; color: @((Model.Musicas.Contains(musica)) ? "lawngreen" : "")"></i>     @musica.Nome
                                </label>
                            </div>
                            </td>
                        </tr>

                    }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                    <input type="submit" value="Guardar Alterações" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index"><i class="bi bi-arrow-90deg-left" style="color: white"> Voltar </i></a>
</div>

<script>
    //função para trocar o icon
    document.querySelectorAll('input[type = "checkbox"]').forEach(function (checkbox) {
         checkbox.addEventListener("change", function () {
             const icon = document.getElementById('icon-' + this.id.split('-')[1]);

             if (this.checked) {
                 icon.classList.remove('bi-check-circle');
                 icon.classList.add('bi-check-circle-fill');
                 icon.style.color = 'lawngreen';
             } else {
                 icon.classList.remove('bi-check-circle-fill');
                 icon.classList.add('bi-check-circle');
                 icon.style.color = '';
             }
         });
    });
</script>
