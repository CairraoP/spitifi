@model spitifi.Models.DbModels.PlayList

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar a Playlist</h1>

<h3>Tem a certeza que quer apagar esta Playlist?</h3>
<div>
    <h4>PlayList</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dono.Username)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
    </form>
</div>
